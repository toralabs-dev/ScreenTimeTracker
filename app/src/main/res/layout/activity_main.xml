<?xml version="1.0" encoding="utf-8"?>
<!--
    Dashboard Layout - Main screen showing screen time statistics
    Features:
    - Circular progress indicator showing usage vs 2-hour limit
    - Total time spent and percentage of limit
    - Top 3 most-used social media apps with times
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.MainActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/main_title"
        app:titleCentered="true"
        app:titleTextAppearance="?attr/textAppearanceTitleLarge" />

    <!-- Scrollable content area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== Progress Card - Shows circular indicator and stats ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Circular Progress Container -->
                    <FrameLayout
                        android:id="@+id/progressContainer"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Background track (gray circle) -->
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressBackground"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:progress="100"
                            app:indicatorColor="?attr/colorOutlineVariant"
                            app:indicatorSize="200dp"
                            app:trackColor="@android:color/transparent"
                            app:trackThickness="12dp" />

                        <!-- Actual progress indicator -->
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/circularProgress"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:progress="0"
                            app:indicatorColor="@color/progress_indicator_color"
                            app:indicatorSize="200dp"
                            app:trackColor="@android:color/transparent"
                            app:trackThickness="12dp"
                            tools:progress="65" />

                        <!-- Center content - Time display -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- Total time spent -->
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/totalTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceHeadlineLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                tools:text="1h 24m" />

                            <!-- Label -->
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dashboard_today"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Percentage and limit info -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/percentageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progressContainer"
                        tools:text="65% of 2 hour limit" />

                    <!-- Status message (under/over limit) -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/percentageText"
                        tools:text="36 minutes remaining"
                        tools:textColor="?attr/colorPrimary" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Top Apps Section ===== -->
            <LinearLayout
                android:id="@+id/topAppsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/topAppsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dashboard_top_apps"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seeAllButton"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Top App 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/app1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Rank badge -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app1Rank"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rank_badge_background"
                        android:gravity="center"
                        android:text="1"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- App icon -->
                    <ImageView
                        android:id="@+id/app1Icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/app1Rank"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@android:drawable/sym_def_app_icon" />

                    <!-- App name -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app1Time"
                        app:layout_constraintStart_toEndOf="@id/app1Icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Instagram" />

                    <!-- Usage time -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app1Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app1Chevron"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="45m" />

                    <!-- Chevron - decorative since card is clickable -->
                    <ImageView
                        android:id="@+id/app1Chevron"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Top App 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/app2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app2Rank"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rank_badge_background"
                        android:gravity="center"
                        android:text="2"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- App icon -->
                    <ImageView
                        android:id="@+id/app2Icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/app2Rank"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@android:drawable/sym_def_app_icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app2Time"
                        app:layout_constraintStart_toEndOf="@id/app2Icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="TikTok" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app2Chevron"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="32m" />

                    <!-- Chevron - decorative since card is clickable -->
                    <ImageView
                        android:id="@+id/app2Chevron"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Top App 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/app3Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app3Rank"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rank_badge_background"
                        android:gravity="center"
                        android:text="3"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- App icon -->
                    <ImageView
                        android:id="@+id/app3Icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/app3Rank"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@android:drawable/sym_def_app_icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app3Time"
                        app:layout_constraintStart_toEndOf="@id/app3Icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="YouTube" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/app3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/app3Chevron"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="18m" />

                    <!-- Chevron - decorative since card is clickable -->
                    <ImageView
                        android:id="@+id/app3Chevron"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Longest Sessions Section ===== -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/longestSessionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/dashboard_longest_sessions"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Session 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/session1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- App name -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toStartOf="@id/session1Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Instagram" />

                    <!-- Time range -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session1TimeRange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toStartOf="@id/session1Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/session1Name"
                        tools:text="2:15 PM - 3:00 PM" />

                    <!-- Session duration -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session1Duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="45m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Session 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/session2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toStartOf="@id/session2Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="YouTube" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session2TimeRange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toStartOf="@id/session2Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/session2Name"
                        tools:text="5:30 PM - 6:08 PM" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session2Duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="38m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Session 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/session3Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toStartOf="@id/session3Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="TikTok" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session3TimeRange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toStartOf="@id/session3Duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/session3Name"
                        tools:text="9:10 AM - 9:32 AM" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/session3Duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="22m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Smart Recommendations Section - For You ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recommendationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Lightbulb icon -->
                    <ImageView
                        android:id="@+id/recommendationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightbulb"
                        android:contentDescription="@null"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@id/recommendationTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/recommendationTitle" />

                    <!-- "For You" title -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recommendationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/recommendation_title"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toEndOf="@id/recommendationIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Dismiss button (X) -->
                    <ImageButton
                        android:id="@+id/dismissButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/recommendation_dismiss"
                        android:padding="4dp"
                        app:tint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Insight text -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recommendationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recommendationTitle"
                        tools:text="You spend 45% more time on apps between 2-4 PM over the past 3 days." />

                    <!-- CTA Button (tonal/filled) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recommendationCtaButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recommendationText"
                        tools:text="Start Focus Mode at 2 PM" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Trends Section - Daily Usage Chart ===== -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/trendsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/dashboard_trends"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Trends Card with Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trendsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Range selector chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/trendRangeChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip7Days"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/dashboard_trends_7d" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip14Days"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard_trends_14d" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip30Days"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard_trends_30d" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Data coverage indicator (shown when partial data available) -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dataCoverageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="gone"
                        tools:text="Only 7 of 30 days available"
                        tools:visibility="visible" />

                    <!-- Summary stats row -->
                    <LinearLayout
                        android:id="@+id/trendSummaryRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/trendAverageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="Average: 1h 30m" />

                        <View
                            android:layout_width="24dp"
                            android:layout_height="1dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/trendWorstDayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="Worst day: 2h 45m (1/12)" />

                    </LinearLayout>

                    <!-- Line Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/trendLineChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp" />

                    <!-- Trend loading indicator -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/trendLoadingIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:indeterminate="true"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Trends empty state (shown when no trend data) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trendsEmptyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="@string/dashboard_trends_no_data"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Empty state message (shown when no usage data) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emptyStateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_no_data_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/dashboard_no_data_message"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Loading indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/loadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
